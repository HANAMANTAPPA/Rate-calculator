<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Rate Calculator</title>
  </head>
  <body>
    <div class="form-container">
      <h2>Rate Calculator</h2>
      <form action="/" method="post">
        <div class="form-group">
          <label for="name">Name:</label>
          <input
            type="text"
            id="name"
            name="username"
            placeholder="Enter your name"
            required
            autocomplete="off"
          />
        </div>
        <div class="form-group">
          <label for="number">mobile number:</label>
          <input
            type="number"
            id="number"
            name="userumber"
            placeholder="mobile number"
            required
          />
        </div>
        <div class="form-group">
          <label for="mail">email:</label>
          <input
            type="email"
            id="email"
            name="usermail"
            placeholder="Enter your email"
            required
            autocomplete="off"
          />
        </div>

        <!--  -->
        <div class="form-group">
          <label for="from">From :</label>
          <select name="from" id="from">
            <option value="hassan">Bangalore</option>
            <option value="mysore">mysore</option>
          </select>
        </div>

        <div class="form-group">
          <label for="to">To :</label>
          <select name="to" id="to">
            <option value="hassan">Hassan</option>
            <option value="mysore">Mysore</option>
            <option value="tumakur">Tumakar</option>
            <option value="koppal">Koppla</option>
            <option value="manday">Manday</option>
            <option value="raichur">Raichur</option>
            <option value="gadag">Gadag</option>
            <option value="udupi">Udupi</option>
            <option value="shimoga">Shivamogga</option>
            <option value="hubli">Hubli</option>
          </select>
        </div>

        <div class="form-group">
          <label for="weight">Weight:</label>
          <input
            type="number"
            id="weight"
            name="weight"
            placeholder="Enter weight"
            required
            autocomplete="off"
          />
        </div>
        <button type="submit" class="submit-btn">submit</button>
      </form>
    </div>
  </body>
</html>
